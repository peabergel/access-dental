<div class="container mx-auto my-8 max-w-2xl">
  <div class="bg-white p-8 rounded-lg shadow-lg">
    <h1 class="text-2xl font-semibold text-gray-800 mb-2 text-center">
      Modification du produit <span class="font-bold text-access-blue"><%= @product.name %></span>
      <span class="block font-bold text-access-blue"><%= @product.brand.name %></span>
    </h1>

    <%= simple_form_for @product do |f| %>
      <div class="space-y-4">
        <%= f.input :name,
            label: 'Nom',
            input_html: { class: 'rounded-lg' },
            wrapper_html: { class: 'mb-4' } %>

        <%= f.association :category,
            label: 'Catégorie',
            collection: Category.childless,
            label_method: :complete_name,
            value_method: :id,
            input_html: { class: 'rounded-lg' },
            wrapper_html: { class: 'mb-4' }
        %>

        <%= f.association :brand,
            label: 'Marque',
            as: :select,
            collection: Brand.all,
            input_html: { class: 'rounded-lg' },
            wrapper_html: { class: 'mb-4' } %>

        <%= f.input :description,
            as: :text,
            label: 'Description',
            input_html: { class: 'rounded-lg', rows: 4 },
            wrapper_html: { class: 'mb-4' } %>

        <%= f.input :image_url,
            label: 'Image',
            input_html: { class: 'rounded-lg' },
            wrapper_html: { class: 'mb-4' } %>

        <%= f.input :pdf_url,
            label: 'Fiche technique',
            input_html: { class: 'rounded-lg' },
            wrapper_html: { class: 'mb-4' } %>

        <%= f.input :position,
            label: 'Position',
            input_html: { class: 'rounded-lg' },
            wrapper_html: { class: 'mb-6' } %>

        <div class="flex justify-center space-x-4">
          <%= link_to 'Annuler',
              category_path(@product.category),
              class: 'w-1/3 bg-gray-500 hover:bg-gray-600 text-white font-medium py-3 px-6 rounded-lg transition duration-200 ease-in-out transform hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50 text-center' %>

          <%= f.submit 'Mettre à jour',
              class: 'w-2/3 bg-access-blue hover:bg-access-dark text-white font-medium py-3 px-6 rounded-lg transition duration-200 ease-in-out transform hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
