<!-- app/views/shared/_carousel.html.erb -->
<div data-controller="carousel" class="relative w-full max-w-6xl mx-auto">
  <div class="overflow-hidden shadow-lg">
    <div data-carousel-target="slideContainer" class="flex transition-transform duration-300 ease-in-out">
      <% Brand.first.products.each do |product| %>
        <div class="w-1/3 flex-shrink-0 p-2">
          <div class="flex items-center justify-center text-2xl font-bold">
            <%= render "product_card", product: product %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <button
    data-action="click->carousel#prevSlide"
    data-carousel-target="prevButton"
    class="absolute top-1/2 -left-4 transform -translate-y-1/2 bg-white bg-opacity-50 rounded-full p-2 transition-all hover:bg-opacity-75"
  >
    <!-- Vous pouvez utiliser une icône de votre choix ici -->
    &lt;
  </button>
  <button
    data-action="click->carousel#nextSlide"
    data-carousel-target="nextButton"
    class="absolute top-1/2 -right-4 transform -translate-y-1/2 bg-white bg-opacity-50 rounded-full p-2 transition-all hover:bg-opacity-75"
  >
    <!-- Vous pouvez utiliser une icône de votre choix ici -->
    &gt;
  </button>
  <div class="absolute -bottom-8 left-1/2 transform -translate-x-1/2 flex space-x-2">
    <% Brand.first.products.each_with_index do |_, index| %>
      <button
        data-action="click->carousel#goToSlide"
        data-carousel-slide-index="<%= index %>"
        class="w-3 h-3 rounded-full bg-gray-300"
        data-carousel-target="indicator"
      ></button>
    <% end %>
  </div>
</div>
