<div class="container mx-auto mt-5 px-[20rem]">
  <h1 class="text-xl text-center text-access-blue">Créer une nouvelle offre</h1>
  <%= simple_form_for [@offer] do |f| %>
    <div class='form-group pb-2'>
      <%= f.input :name, label: 'Nom', placeholder: 'Owandy' %>
      <%= f.input :image_url, label: 'Image URL', placeholder: 'https://www.lien-vers-votre-image' %>
      <%= f.input :pdf_url, as: :text, label: 'Pdf URL', placeholder: "https://www.access-dental.fr/wp-content/uploads/2024/10/Owandy_ADF_24.pdf" %>
      <%= f.input :month_offer, as: :boolean, label: 'Offre du mois', placeholder: "Faux" %>
      <%= f.submit 'Créer une offre', class: 'text-white bg-access-blue hover:bg-access-dark font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2'%>
    </div>
  <% end %>
</div>
