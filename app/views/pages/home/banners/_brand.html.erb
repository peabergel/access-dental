<div class="bg-access-light-blue flex items-center justify-between px-5 lg:px-[6rem] xl:px-[10rem] py-6">
  <h3 class="text-access-dark text-lg lg:text-2xl text-center font-semibold pr-12 lg:pr-24">Des marques de confiance, <br>partenaires de notre r√©ussite</h3>

  <div id="brandSwiper" class="w-full swiper">
    <div class="swiper-wrapper">
      <% @brands.each do |brand| %>
        <div class="swiper-slide bg-access-light-blue">
          <div class="flex justify-center items-center w-full">
            <%= image_tag brand.image_url, alt: "logo #{brand.name}", class: "w-40 object-contain mix-blend-multiply" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
