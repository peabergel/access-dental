<section id="team" class="py-5 lg:py-16 bg-right-bottom" style="background-image: url(<%= image_path('our-service-bg.svg')%>)">
  <div class="container px-6 py-10 mx-auto sm:px-8 lg:px-5 2xl:px-32">
    <div data-scroll-reveal-target="item" class="reveal text-access-blue font-normal text-sm tracking-[0.2rem] mb-2 flex justify-center items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 12 12" class="w-3 h-3">
        <path d="M12 5.98442C7.01299 6.54546 6.57662 7.01299 6.01558 12C5.45455 7.01299 4.98701 6.54546 0 5.98442C4.98701 5.42338 5.45455 4.98701 6.01558 0C6.57662 4.98701 7.01299 5.42338 12 5.98442Z" fill="#1975a0"/>
      </svg>
      NOTRE ÉQUIPE
    </div>
    <h2 data-animate-title-target="title" class="text-center text-3xl sm:text-4xl lg:text-[48px] lg:leading-[4rem] font-bold text-access-blue mb-4">
      <span class="whitespace-nowrap">Des Experts</span>
      <span class="whitespace-nowrap text-access-dark">à Votre Service</span>
    </h2>
    <p data-scroll-reveal-target="item" data-delay="200ms" class="reveal flex font-light justify-center text-gray-500 mt-4">Nous mettons notre expertise au service de votre réussite et de vos ambitions</p>

    <div data-controller="scroll-reveal" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mt-8 py-4">
      <% members = [
        { image: "homme", alt: "Image de Thibault Paquet", title: "Thibault Paquet", text: "Directeur" },
        { image: "homme2", alt: "Image de Julien Bergeron", title: "Julien Bergeron", text: "Assistant de Direction" },
        { image: "homme3", alt: "Image de Norbert Bely", title: "Norbert Bely", text: "Responsable Technique" },
        { image: "homme4", alt: "Image de Anthony Poirier", title: "Anthony Poirier", text: "Technicien" },
        { image: "homme5", alt: "Image de Valentin Freche", title: "Valentin Freche", text: "Technicien" },
        { image: "femme", alt: "Image de Léonor Gameiro", title: "Léonor Gameiro", text: "Experte-comptable"}
      ] %>

      <% members.each_with_index do |member, index| %>
        <%= render "components/member_card", **member, index: index %>
      <% end %>
    </div>

  </div>
</section>
