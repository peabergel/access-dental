<article
  data-scroll-reveal-target="item"
  class="reveal article-card-<%= index %> my-5 sm:my-0 relative bg-access-light-blue px-5 md:px-0 rounded-[2rem] overflow-hidden flex-1 flex flex-col <%= 'cursor-grab' if current_user %>"
  data-sortable-class="article"
  data-controller="card"
  data-sortable-url="<%= positions_path(article) %>"
  data-sortable-handle=""
>
  <!-- Texte qui apparaitra avec l'overlay -->
  <div
    class="
      absolute inset-0 flex items-center justify-center text-white text-lg
      px-5 opacity-0 transition-opacity duration-500 ease-out z-20
      pointer-events-none
    "
    data-card-target="content"
  >
    <p><%= article.content %></p>
  </div>

  <!-- Image de la card -->
  <div class="h-56 sm:h-64 overflow-hidden rounded-[2rem]">
    <%= image_tag article.image_url, alt: "#{article.title} image", class: "w-full h-56 sm:h-64 object-cover transform transition duration-500 hover:scale-110 rounded-[2rem]" %>
  </div>

  <!-- Contenu par défaut visible -->
  <div class="py-6 relative z-10 flex flex-col flex-grow justify-between gap-5">
    <h3 class="text-xl font-semibold text-access-dark"><%= article.title %></h3>

    <p class="text-access-dark font-light"><%= article.pre_content %></p>

    <div class="flex justify-between items-center">
      <% if article.pdf_url.present? %>
        <%= link_to article.pdf_url, target: "_blank" do %>
          <%= render "pages/home/components/learn_more_btn", data_attributes: { action: "click->card#toggleOverlay", card_target: "link" } %>
        <% end %>
      <% else %>
        <%= render "pages/home/components/learn_more_btn", data_attributes: {} %>
      <% end %>

      <% if current_user %>
        <div class="flex gap-3">
          <%= link_to edit_article_path(article), class: "text-access-dark hover:text-access-blue transition-colors duration-300" do %>
            <i class="fa-regular fa-pen-to-square text-xl"></i>
          <% end %>

          <%= link_to article_path(article),
              data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer cet article ?" },
              class: "text-access-dark hover:text-red-500 transition-colors duration-300" do %>
            <i class="fa-regular fa-trash-can text-xl"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Overlay de fond qui se déplace de gauche à droite et déclenche aussi toggle -->
  <div
    class="
      absolute -left-[1px] inset-y-0 right-0 bg-access-dark bg-opacity-95
      rounded-[2rem] transition-transform duration-500 ease-out transform
      -translate-x-full z-10 cursor-pointer
    "
    data-card-target="overlay"
    data-action="click->card#toggleOverlay"
  ></div>
</article>
