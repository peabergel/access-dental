  <!-- Contenu principal -->
  <span class="relative z-10 transition-transform duration-300 ease-out lg:group-hover:text-white">
    <%= image_tag image, class: "mx-auto md:mx-0 w-12" %>
    <h3 class="text-center md:text-start font-semibold text-xl pt-4 transition-colors duration-300"><%= title %></h3>
    <p class="mt-4 pb-4 transition-colors duration-300 font-light"><%= text %></p>
  </span>

  <!-- ArriÃ¨re-plan interactif -->
  <span data-prevent-effect-target="overlay" class="absolute inset-0 bg-access-dark transform translate-y-full lg:group-hover:translate-y-0 transition-transform duration-500 ease-out"></span>
</div>
