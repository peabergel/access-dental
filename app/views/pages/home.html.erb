<div class="bg-[#79ACD7]">
  <div class="container mx-auto relative z-10">
    <!-- Hero Section avec image de fond animée -->
    <div class="h-[82vh] flex items-center justify-center">
      <div class="absolute inset-0 bg-no-repeat bg-cover bg-center" style="background-image: url('https://res.cloudinary.com/dmlvtscck/image/upload/v1728478415/Access%20dental/Images/owandy_ios_v6_w83svo.png');">
      </div>
    </div>

    <!-- Boutons de contact flottants -->
    <div class="absolute inset-x-0 flex justify-center -bottom-10 space-x-4">
      <% [
        { icon: 'fas fa-phone-alt', link: '#' },
        { icon: 'fas fa-envelope', link: '#' },
        { icon: 'fab fa-facebook-f', link: '#' },
        { icon: 'fab fa-instagram', link: '#' }
      ].each do |item| %>
        <%= link_to item[:link], class: 'group' do %>
          <div class="bg-white rounded-full w-20 h-20 flex items-center justify-center shadow-lg text-[#79ACD7] transition-all duration-300 ease-in-out transform group-hover:scale-110 group-hover:shadow-xl">
            <i class="<%= item[:icon] %> fa-xl"></i>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

