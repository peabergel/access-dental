        <i class="fas fa-phone-alt text-access-blue text-3xl"></i>
        <div class="mx-5">
          <h3 class="font-semibold mb-3 text-xl">Un projet à réaliser ?</h3>
          <p class="text-access-light">Appelez au : 05 49 56 57 22</p>
        </div>
      </div>

      <!-- Section "Opening Hours" -->
      <div class="flex items-center">
        <i class="fas fa-clock text-access-blue text-3xl"></i>
        <div class="mx-5">
          <h3 class="text-xl font-semibold mb-3">Heures d'ouverture</h3>
          <p class="text-access-light">Du Lundi au Vendredi 8h - 17h</p>
        </div>
      </div>
    </div>
    <!-- "Make an Appointment" Button -->
    <div class="text-center">
      <%= link_to "#contact", class: "relative inline-flex items-center px-6 py-3 text-white bg-access-blue rounded-full overflow-hidden group shadow-md hover:shadow-lg hover:text-access-dark transition-all duration-500 ease-out" do %>
        <span class="relative z-10 font-medium">Prendre un rendez-vous</span>
        <span class="relative z-10 ml-3 transition-transform transform duration-300 ease-out">
          <!-- Flèche orientée à 45 degrés vers le haut, entourée d'un cercle blanc -->
          <span class="flex items-center justify-center w-8 h-8 bg-white rounded-full group-hover:bg-access-dark transition-all duration-500 ease-out">
            <i class="fa-solid fa-arrow-right flex items-center justify-center h-5 w-5 transform -rotate-45 group-hover:rotate-0 transition-transform duration-300 ease-out text-access-blue"></i>
          </span>
        </span>
        <span class="absolute rounded-full inset-0 bg-white transition-all duration-500 ease-out transform -translate-x-full group-hover:translate-x-0"></span>
      <% end %>
    </div>

  </div>
</section>

