<div class="bg-access-dark h-48 flex items-center justify-center py-5">
  <!-- Section "Need Dental Services?" -->
  <div class="flex container justify-between text-white px-[6rem]">
    <div class="flex w-1/2 justify-between">
      <div class="flex items-center space-x-3">
        <i class="fas fa-phone-alt text-access-blue text-2xl"></i>
        <div>
          <h3 class="text-white font-semibold">Un projet à réaliser ?</h3>
          <p class="text-access-light">Appelez au : 05 49 56 57 22</p>
        </div>
      </div>
      <!-- Separator -->
      <div class="border-l border-access-light h-10"></div>
      <!-- Section "Opening Hours" -->
      <div class="flex items-center space-x-3">
        <i class="fas fa-clock text-access-blue text-2xl"></i>
        <div>
          <h3 class="text-white font-semibold">Heures d'ouverture</h3>
          <p class="text-access-light">Du Lundi au Vendredi 8h - 17h</p>
        </div>
      </div>
    </div>
    <!-- "Make an Appointment" Button -->
    <a href="#" class="bg-access-blue text-white px-5 py-2 rounded-full flex items-center space-x-2 transition duration-300 hover:bg-access-blue-dark">
      <span>Make An Appointment</span>
      <i class="fas fa-arrow-right text-white"></i>
    </a>
  </div>
</div>

