<%# ////////////////////////////////SECTION NEWS /////////////////////////////////// %>

<section id="news" class="py-12 sm:py-28 px-0 2xl:px-[12rem] bg-access-light-blue bg-center bg-content bg-no-repeat relative" style="background-image: url(<%= image_path('our-blog-bg.svg')%>)">
  <div class="text-center mb-12">
    <p class="text-access-blue font-normal text-sm tracking-[0.2rem] mb-2 flex justify-center items-center gap-2">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 12 12"
        class="w-3 h-3"
      >
        <path
          d="M12 5.98442C7.01299 6.54546 6.57662 7.01299 6.01558 12C5.45455 7.01299 4.98701 6.54546 0 5.98442C4.98701 5.42338 5.45455 4.98701 6.01558 0C6.57662 4.98701 7.01299 5.42338 12 5.98442Z"
          fill="#1E84B5"
        />
      </svg>
      NEWS
    </p>
    <h2 class="text-4xl lg:text-[54px] lg:leading-[4rem] font-bold text-access-blue mb-4">Consultez nos <span class="text-access-dark">Dernières News</span></h2>
    <p class="text-access-dark font-light mb-8">Cliquez ici pour souscrire à notre Newsletter.</p>
  </div>

  <% if current_user %>
    <div class="text-center mb-12">
      <%= link_to "Créer une news", new_article_path, class: "bg-access-blue text-white font-medium px-6 mt-3 py-3 rounded-full hover:bg-access-dark transition-colors" %>
    </div>
  <% end %>

  <div class="container mx-auto sm:flex sm:grid sm:grid-cols-2 lg:grid-cols-3 md:gap-4 lg:gap-8" data-controller=<%= "sortable" if current_user %>>
    <% @articles.each do |article| %>
      <%= render "article_card", article: article %>
    <% end %>
  </div>

  <div class="hidden 2xl:block flex justify-center items-center">
    <%= image_tag "icon-star.svg", class: "absolute bottom-[28rem] w-20 left-12 animate-[zoom_1s_linear_infinite] object-cover" %>
  </div>
</section>

<%# ////////////////////////////////SECTION OFFERS//////////////////////////////////// %>

<section id="offres" class="pt-28 pb-[6.5rem] bg-right-bottom" style="background-image: url(<%= image_path('our-service-bg.svg')%>)">
  <div class="text-center mb-12">
    <p class="text-access-blue font-normal text-sm tracking-[0.2rem] mb-2 flex justify-center items-center gap-2">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 12 12"
        class="w-3 h-3"
      >
        <path
          d="M12 5.98442C7.01299 6.54546 6.57662 7.01299 6.01558 12C5.45455 7.01299 4.98701 6.54546 0 5.98442C4.98701 5.42338 5.45455 4.98701 6.01558 0C6.57662 4.98701 7.01299 5.42338 12 5.98442Z"
          fill="#1E84B5"
        />
      </svg>
      OFFRES
    </p>
    <h2 class="text-5xl font-bold text-access-blue mb-4">Profitez de nos <span class="text-access-dark">Dernières Offres</span></h2>
    <p class="text-access-dark font-light">Découvrez les dernières offres de nos partenaires.</p>
  </div>

  <% if current_user %>
    <div class="flex justify-center items-center">
      <%= link_to 'Créer une offre', new_offer_path(@offer), class: "inline-block px-4 py-3 text-white bg-access-blue hover:bg-access-dark font-medium rounded-full text-sm" %>
    </div>
  <% end %>

  <div class="lg:container px-[6rem] sm:[px-12rem] lg:px-0 justify-center w-full lg:mx-auto xl:pt-[6rem] xl:px-[6rem] md:flex md:gap-4" data-controller=<%= "sortable" if current_user %>>
    <% @offers.each_with_index do |offer| %>
      <div class="flex flex-col h-48 lg:h-72 relative group" data-sortable-url="<%= offer_positions_path(offer) %>" data-sortable-handle="">
        <div class="<%= offer.position.even? ? 'mb-auto' : 'mt-auto' %>">
          <%= link_to offer.pdf_url, target: "_blank" do %>
            <%= image_tag offer.image_url, class: "max-h-48 w-full rounded-[2rem] shadow-lg transform transition duration-500 hover:scale-110 object-cover" %>
          <% end %>
        </div>

        <% if current_user %>
          <!-- Boutons Edit et Destroy -->
          <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <!-- Bouton Edit -->
            <%= link_to edit_offer_path(offer), class: "bg-access-blue text-white p-2 rounded-full mx-3 hover:bg-access-dark", title: "Edit" do %>
              <i class="fas fa-edit"></i>
            <% end %>

            <!-- Bouton Destroy -->
            <%= link_to offer_path(offer), data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer cette offre ?" }, class: "bg-red-500 text-white p-2 rounded-full mx-3 hover:bg-red-600", title: "Delete" do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

</section>

