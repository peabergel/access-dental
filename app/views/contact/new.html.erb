<div class="max-w-lg mx-auto">
  <h2 class="text-2xl font-bold mb-4">Contactez-nous</h2>

  <%= simple_form_for :contact, url: contact_path, method: :post, html: { class: "space-y-4" } do |f| %>
    <div>
      <%= f.input :name, label: "Nom", required: true, input_html: { class: "rounded-md" } %>
    </div>
    <div>
      <%= f.input :email, label: "Email", as: :email, required: true, input_html: { class: "rounded-md" } %>
    </div>
    <div>
      <%= f.input :message, label: "Message", as: :text, required: true, input_html: { rows: 5, class: "rounded-md" } %>
    </div>
    <%= f.button :submit, "Envoyer", class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
  <% end %>
</div>
